{
  "name": "Developer assistant",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "Redmine branch name and JIRA task generator",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/favicon.png",
    "default_title": "Redmine branch name and JIRA task generator",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "https://redmine.noveogroup.com/*",
    "https://wyndcustomers.atlassian.net/*"
  ],
  "background": {
    "scripts": ["src/background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://redmine.noveogroup.com/*"
      ],
      "css": [
        "src/inject/redmine.css"
      ]
    },
    {
      "matches": [
        "https://redmine.noveogroup.com/*"
      ],
      "js": [
        "src/inject/redmine.js"
      ]
    },
    {
      "matches": [
        "https://wyndcustomers.atlassian.net/*"
      ],
      "css": [
        "src/inject/jira.css"
      ]
    },
    {
      "matches": [
        "https://wyndcustomers.atlassian.net/*"
      ],
      "js": [
        "src/inject/jira.js"
      ]
    }
  ]
}
