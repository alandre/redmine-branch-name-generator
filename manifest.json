{
  "name": "Redmine branch name generator",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Redmine branch name generator",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": "icons/favicon.png",
    "default_title": "Redmine branch name generator",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "clipboardWrite",
    "https://redmine.noveogroup.com/*"
  ],
  "background": {
    "scripts": ["src/background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://redmine.noveogroup.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://redmine.noveogroup.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
